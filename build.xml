<project name="Soundboard" default="run" basedir=".">
  <description>
    CS338 A2
  </description>
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="tarfile" location="A2.tar.gz"/>

  <path id="class.path">
    <fileset dir="lib">
      <include name="**/*.jar" />
    </fileset>
  </path>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
    description="compile the source " >
    <javac srcdir="${src}" destdir="${build}">
      <classpath refid="class.path" />
    </javac>
  </target>

  <target name="run" depends="compile"
    description="run stuff broseph." >
    <java classname="Soundboard" classpath="${build}" fork="true"/>
  </target>

  <target name="clean"
    description="clean up" >
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
    <delete file="${tarfile}"/>
  </target>

  <target name="tar" description="create archive to submit">
    <tar basedir="." includes="src/* build.xml README" destfile="${tarfile}"
      compression="gzip" />
  </target>
</project>
